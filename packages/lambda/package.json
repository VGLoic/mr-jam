{
  "name": "lambda",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "netlify-lambda serve -c webpack.lambda.js .",
    "test": "NODE_ENV=test jest src --watch",
    "test:cover": "NODE_ENV=test jest src --coverage"
  },
  "dependencies": {
    "apollo-datasource-rest": "^0.6.9",
    "apollo-server-lambda": "^2.12.0",
    "date-fns": "^2.11.0",
    "graphql": "^14.5.8"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "dotenv": "^8.2.0",
    "husky": ">=4",
    "jest": "^25.2.4",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": ">=10",
    "netlify-lambda": "^1.6.3",
    "nodemon-webpack-plugin": "^4.2.1",
    "prettier": "2.0.1",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,md}": "prettier --write"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testResultsProcessor": "jest-sonar-reporter",
    "testRegex": "test.ts$",
    "rootDir": ".",
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/src/schema.ts",
      "!**/src/main.ts"
    ]
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
